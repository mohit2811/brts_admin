<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/lettravel"
    tools:context="tech.inception.admin.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edcfc91f"
        android:layout_marginLeft="50dp"
        android:text="BUS ROUTES"
        android:onClick="add_routes"
        android:layout_marginRight="50dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edcfc91f"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="BUS STOPS"
        android:onClick="add_stops"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edcfc91f"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="BUSES"
        android:onClick="add_buses"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edcfc91f"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="TIMINGS"
        android:onClick="set_timing"/>

</LinearLayout>
